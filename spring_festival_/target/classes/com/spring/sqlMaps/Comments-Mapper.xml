<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Comments-Mapper">
	<!-- 후기 -->
	<select id="selectCommentsList" resultType="comments">
		select *
		from comments
		where unq_Id=#{unq_Id}
		order by c_no asc
	</select>
	
	<select id="countComments" resultType="int">
		select count(*)
		from comments
		where unq_Id=#{unq_Id}
	</select>
	
	<update id="insertComments">
		insert into comments(c_no,unq_Id,c_content,c_regdate,c_writer)
		values(COMMENTS_SEQ.nextVal,#{unq_Id},#{c_content},sysdate,#{c_writer})
	</update>
	
	<update id="updateComments">
		update comments
		set
		content=#{c_content}
		where unq_Id=#{unq_Id}
	</update>
	
	<update id="deleteComments">
		delete from comments
		where c_no=#{c_no}
	</update>
		
</mapper>

    